<div class="flex flex-col justify-start items-center w-full">
  <p style="color: green"><%= notice %></p>

  <%= render @admin_episode %>

  <div class="mt-4 flex justify-center items-center gap-2">
    <%= link_to "Edit this episode", edit_admin_movie_episode_path(@admin_movie, @admin_episode), class: "bg-amaranth-500 hover:bg-amaranth-600 cursor-pointer px-4 py-2 rounded text-white-50" %>
    <%= link_to "Back to episodes", admin_movie_episodes_path, class: "bg-camelot-500 hover:bg-camelot-600 cursor-pointer px-4 py-2 rounded text-white-50" %>

    <%= button_to "Destroy this episode", [:admin, @admin_movie, @admin_episode], method: :delete, class: "bg-red-500 hover:bg-red-600 cursor-pointer px-4 py-2 rounded text-white-50", data: {'turbo-confirm': "Are you sure?"} %>
  </div>
</div>