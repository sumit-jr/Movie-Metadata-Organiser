<div class="flex flex-col lg:flex-row-reverse w-full justify-start lg:justify-end pb-6">
  <div>
    <div>
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    </div>

    <%= (@episode.video.present?) ? (video_tag @episode.video, autoplay:false, controls:true, class:"rounded") : "No video available"  %>

    <div class="my-4 border p-4 rounded">
      <h1 class="text-2xl font-semibold"><%= @episode.title %></h1>
      <p class="text-gray-700 mt-2"><%= @episode.description %></p>
    </div> 

    <div class="my-6 lg:mb-0">
      <%= link_to "Mark as complete", movie_episode_path(@movie, @episode), data: { 'turbo-method' => :put}, class: "bg-green-500 rounded hover:bg-green-600 text-white-50 px-4 py-2" %>
    </div>
  </div>

  <div class="sidebar_container lg-min-w-60 lg:mr-4 lg-overflow-y-scroll">
    <%= render "sidebar", movie: @movie, completed_episodes: @completed_episodes %>
  </div>
</div>
