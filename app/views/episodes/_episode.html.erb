<div id="<%= dom_id episode %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= episode.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= episode.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Paid:</strong>
    <%= episode.paid %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Movie:</strong>
    <%= episode.movie_id %>
  </p>

</div>
